<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/FacebookBackground</item>
    </style>

    <style name="AppPreferenceTheme" parent="Theme.AppCompat.Light.DarkActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/FacebookBackground</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeTransparentStatusBar" />

    <style name="PrimaryTextStyle">
        <item name="android:fontFamily">@string/sans_serif</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/primary_font_size</item>
    </style>

    <style name="SecondaryTextStyle">
        <item name="android:fontFamily">@string/sans_serif_light</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/secondary_font_size</item>
    </style>

    <style name="HorizontalDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_size</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="VerticalDividerStyle">
        <item name="android:layout_width">@dimen/divider_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="DefaultToolbar" parent="AllHeightWidth">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="AllHeightWidth">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="WrapContentHeightWidth">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="WrapHeightMatchWidth">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="WrapWidthtMatchHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FlagsDefaultSize">
        <item name="android:layout_width">@dimen/flag_default_size</item>
        <item name="android:layout_height">@dimen/flag_default_size</item>
    </style>

    <style name="DefaultFloatingActionBar" parent="WrapContentHeightWidth">
        <item name="android:visibility">gone</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">20sp</item>
    </style>

</resources>
